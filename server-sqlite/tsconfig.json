{
  "compilerOptions": 
  { 
    "outDir":"./server_build",
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "NodeNext",
    "lib": ["ES7"],
    "paths": {
      "@/*": ["./server_source/*"],
      "@entities/*": ["./server_source/db/entities/*"],
      "@repositories/*": ["./server_source/db/repositories/*"],
      "@services/*": ["./server_source/db/services/*"]
    },
  },
  "include": [
    "server_source/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
