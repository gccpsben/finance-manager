{
  "compilerOptions":
  {
    "outDir":"./server_build",
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "target": "ES2023",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "module": "NodeNext",
    "lib": ["ES6"]
  },
  "include": [
    "server_source/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "logs",
    "dev",
    "server_ut-build"
  ]
}
