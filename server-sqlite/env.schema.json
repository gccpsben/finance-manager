{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Env config for Finance Manager",
  "required": [
    "nodeEnv",
    "server",
    "auth"
  ],
  "properties": {
    "nodeEnv": {
      "type": "string",
      "anyOf": [
        { "const": "dev" },
        { "const": "test" },
        { "const": "prod" }
      ]
    },
    "server": {
      "type": "object",
      "properties": {
        "port": {
          "type": "number",
          "maximum": 65565,
          "minimum": 1
        },
        "ssl": {
          "type": "object",
          "properties": {
            "pemPath": {
              "type": "string"
            },
            "keyPath": {
              "type": "string"
            }
          }
        },
        "distFolderPath": {
          "type": "string"
        }
      }
    },
    "auth": {
      "type": "object",
      "properties": {
        "tokenExpiryMs": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 1
        }
      }
    },
    "logs": {
      "type": "object",
      "required": ["logMode", "logFolderPath"],
      "properties": {
        "logMode": {
          "type": "string",
          "anyOf": [
            { "const": "DISABLED" },
            { "const": "TO_FILE_ONLY" },
            { "const": "TO_CONSOLE_ONLY" },
            { "const": "TO_BOTH" }
          ]
        },
        "logFolderPath": {
          "type": "string"
        }
      }
    },
    "storage": {
      "type": "object",
      "required": ["db", "files"],
      "properties": {
        "db": {
          "type": "object",
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "hostname",
                "database",
                "password"
              ],
              "properties": {
                "type": { "const": "postgres" },
                "hostname": { "type": "string" },
                "database": { "type": "string" },
                "password": { "type": "string" },
                "username": { "type": "string" }
              }
            },
            {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "dbPath"
              ],
              "properties": {
                "type": { "const": "sqlite" },
                "dbPath": {
                  "type": "string",
                  "anyOf": [
                    { "const": ":memory:" },
                    { "type": "string" }
                  ]
                }
              }
            }
          ]
        },
        "files": {
          "type": "object",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "type": { "const": "inMemory" }
              }
            },
            {
              "type": "object",
              "properties": {
                "type": { "const": "folderOnDisk" },
                "pathToFolder": { "type": "string" }
              }
            }
          ]
        }
      }
    }
  }
}